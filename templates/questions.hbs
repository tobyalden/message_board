<h1>Questions:</h1>

<ol>
  {{#each}}
   <li>{{#link-to 'question' id}}{{title}}{{/link-to}} (asked by {{author}})</li>
 {{/each}}
</ol>

<form>
  <div class="form-group">
    <label for="title">Title:</label>
    {{input name="title" class="form-control" value=title}}
  </div>

  <div class="form-group">
    <label for="author">Author:</label>
    {{input name="author" class="form-control" value=author}}
  </div>

  <div class="form-group">
    <label for="description">Description:</label>
    {{input name="description" class="form-control" value=description}}
  </div>

  <button class='btn btn-success' {{action 'addQuestion'}}>Add Question</button>
</form>
